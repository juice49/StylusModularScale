/* ==========================================================================
   Modular Scale
   ========================================================================== */

modularScale(scale = 1, baseFontSize = 16, ratio = 'golden', i = 0)

	if ratio is a 'string' and ratio in msConfig.scales
		ratio = msConfig.scales[ratio]

	if scale > 0 && i < scale
		return modularScale(scale, baseFontSize * ratio, ratio, i + 1)

